@model Asp.Net_Final_Project.Models.ResumeEducationItem
@{
    ViewData["Title"] = "RDetails";
}

<div class="col-lg-10 offset-1">
    <div class="block text-center">
        <table class="table table-striped table-hover">
            <thead>
                <tr class="text-center">
                    <th>Title</th>
                    <th>Calendar</th>
                    <th>Section</th>
                </tr>
            </thead>
            <tbody class="text-center">
                <tr>
                    <td>@Model.Title</td>
                    <td>@Model.Calendar</td>
                    <td>@Model.Sec</td>
                </tr>
            </tbody>
        </table>
        <h4 class="mt-5">Description</h4>
        <hr />
        <div class="col-8 offset-2"><h5>@Model.Description</h5></div>
        <hr />
        <div class="row">
            <div class="col-4 offset-1"><a asp-area="Admin" asp-controller="Resume" asp-action="LUpdate" asp-route-id="@Model.Id" class="btn btn-primary btn-block text-white btn-sm"><i class="fas fa-pencil-alt"></i> </a></div>
            <div class="col-4 offset-1"><a asp-area="Admin" asp-controller="Resume" asp-action="LDelete" asp-route-id="@Model.Id" class="btn btn-danger btn-block text-white btn-sm"><i class="fas fa-trash-alt"></i> </a></div>
            <div class="mt-5 col-12"> <a asp-area="Admin" asp-controller="Resume" asp-action="Index" class="text-white btn btn-success btn-block">Back</a></div>
        </div>
    </div>
</div>