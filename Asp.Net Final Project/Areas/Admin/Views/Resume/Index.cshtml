@model MainPageVM
@{
    ViewData["Title"] = "Index";
}

<div class="col-lg-10 offset-1">
    <div class="block">
        <div class="title text-center">
            <strong class="d-block">Section Name</strong> <span class="d-block">@Model.SectionResume.SectionName</span>
            <hr />
            <div class="row">
                <div class="col-6">
                    <strong class="d-block">Left Part</strong> <span class="d-block">@Model.SectionResume.FirstSubSectionName</span>
                    <hr />
                </div>
                <div class="col-6">
                    <strong class="d-block">Right Part</strong> <span class="d-block">@Model.SectionResume.SecondSubSectionName</span>
                    <hr />
                </div>
                <div class="col-12">
                    <a asp-area="Admin" asp-controller="Resume" asp-action="SectionNameUpdate" asp-route-id="@Model.SectionResume.Id" class="btn btn-primary btn-block text-white mt-3 btn-sm"><i class="fas fa-pencil-alt"></i> </a>
                </div>
            </div>
            <hr />
            <strong class="d-block">Left Item</strong>
        </div>
        <div class="table-responsive my-5">
            <table class="table table-striped table-hover">
                <thead>
                    <tr class="text-center">
                        <th>Title</th>
                        <th>Calendar</th>
                        <th>Sec</th>
                        <th>Details</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody class="text-center">
                    @foreach (var item in Model.ResumeExperienceItem)
                    {
                        <tr>
                            <td>@item.Title</td>
                            <td>@item.Calendar</td>
                            <td>@item.Sec</td>
                            <td><a asp-area="Admin" asp-controller="Resume" asp-action="LDetails" asp-route-id="@item.Id" class="btn btn-primary btn-block text-white btn-sm"><i class="fas fa-info-circle"></i> </a></td>
                            <td><a asp-area="Admin" asp-controller="Resume" asp-action="LUpdate" asp-route-id="@item.Id" class="btn btn-primary btn-block text-white btn-sm"><i class="fas fa-pencil-alt"></i> </a></td>
                            <td><a asp-area="Admin" asp-controller="Resume" asp-action="LDelete" asp-route-id="@item.Id" class="btn btn-danger btn-block text-white btn-sm"><i class="fas fa-trash-alt"></i> </a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <hr />
        <a asp-area="Admin" asp-controller="Resume" asp-action="LCreate" class="btn btn-success btn-block text-white">Create</a>

        <div class="title text-center">
            <hr />
            <strong class="d-block">Right Item</strong>
        </div>
        <div class="table-responsive my-5">
            <table class="table table-striped table-hover">
                <thead>
                    <tr class="text-center">
                        <th>Title</th>
                        <th>Calendar</th>
                        <th>Sec</th>
                        <th>Details</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody class="text-center">
                    @foreach (var item in Model.ResumeEducationItem)
                    {
                        <tr>
                            <td>@item.Title</td>
                            <td>@item.Calendar</td>
                            <td>@item.Sec</td>
                            <td><a asp-area="Admin" asp-controller="Resume" asp-action="RDetails" asp-route-id="@item.Id" class="btn btn-primary btn-block text-white btn-sm"><i class="fas fa-info-circle"></i> </a></td>
                            <td><a asp-area="Admin" asp-controller="Resume" asp-action="RUpdate" asp-route-id="@item.Id" class="btn btn-primary btn-block text-white btn-sm"><i class="fas fa-pencil-alt"></i> </a></td>
                            <td><a asp-area="Admin" asp-controller="Resume" asp-action="RDelete" asp-route-id="@item.Id" class="btn btn-danger btn-block text-white btn-sm"><i class="fas fa-trash-alt"></i> </a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <hr />
        <a asp-area="Admin" asp-controller="Resume" asp-action="RCreate" class="btn btn-success btn-block text-white">Create</a>
    </div>
</div>