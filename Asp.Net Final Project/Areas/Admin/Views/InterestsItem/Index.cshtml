@model MainPageVM
@{
    ViewData["Title"] = "Index";
}

<div class="col-lg-10 offset-1">
    <div class="block">
        <div class="title text-center">
            <strong class="d-block">Section Name</strong> <span class="d-block">@Model.SectionMyInterests.SectionName</span>
            <a asp-area="Admin" asp-controller="InterestsItem" asp-action="SectionNameUpdate" asp-route-id="@Model.SectionMyInterests.Id" class="btn btn-primary btn-block text-white mt-3 btn-sm"><i class="fas fa-pencil-alt"></i> </a></td>
            <hr />
            <strong class="d-block">Interests Items</strong>
        </div>
        <div class="table-responsive mt-5 p-5">
            <table class="table table-striped table-hover">
                <thead>
                    <tr class="text-center">
                        <th>Icon</th>
                        <th>Interest</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody class="text-center">
                    @foreach (var item in Model.MyInterestsInterestsItem)
                    {
                        <tr>
                            <td><i class="@item.InterestsIcon"></i></td>
                            <td>@item.InterestsName</td>
                            <td><a asp-area="Admin" asp-controller="InterestsItem" asp-action="Update" asp-route-id="@item.Id" class="btn btn-primary btn-block text-white btn-sm"><i class="fas fa-pencil-alt"></i> </a></td>
                            <td><a asp-area="Admin" asp-controller="InterestsItem" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-block text-white btn-sm"><i class="fas fa-trash-alt"></i> </a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <hr />
        <a asp-area="Admin" asp-controller="InterestsItem" asp-action="Create" class="btn btn-success btn-block text-white">Create</a>
    </div>
</div>