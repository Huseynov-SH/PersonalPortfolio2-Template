@model Asp.Net_Final_Project.Models.MyInterestsInterestsItem
@{
    ViewData["Title"] = "Create";
}

<div class="col-lg-10 offset-1">
    <div class="block">
        <div class="block-body">
            <form method="post" enctype="multipart/form-data">
                <div class="form-group d-none">
                    <label asp-for="SectionMyInterestsId" class="form-control-label"></label>
                    <select asp-for="SectionMyInterestsId">
                        <option value="1">1</option>
                    </select>
                    <span asp-validation-for="SectionMyInterestsId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="InterestsIcon" class="form-control-label"></label>
                    <input asp-for="InterestsIcon" class="form-control">
                    <span asp-validation-for="InterestsIcon" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="InterestsName" class="form-control-label"></label>
                    <input asp-for="InterestsName" class="form-control">
                    <span asp-validation-for="InterestsName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <hr />
                    <input type="submit" value="Submit" class="btn btn-info btn-block">
                    <a asp-area="Admin" asp-controller="InterestsItem" asp-action="Index" class="text-white btn btn-success btn-block">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
}

