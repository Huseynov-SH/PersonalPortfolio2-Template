@model MainPageVM
@{
    ViewData["Title"] = "Index";
}

<div class="col-lg-10 offset-1">
    <div class="block">
        <div class="title text-center">
            <strong class="d-block">Section Name</strong> <span class="d-block">@Model.SectionWorkProcess.SectionName</span>
            <strong class="d-block mt-3">Circle Text</strong> <span class="d-block">@Model.SectionWorkProcess.Circle</span>
            <a asp-area="Admin" asp-controller="WorkingProcess" asp-action="SectionNameUpdate" asp-route-id="@Model.SectionWorkProcess.Id" class="btn btn-primary btn-block text-white mt-3 btn-sm"><i class="fas fa-pencil-alt"></i> </a>
            <hr />
            <strong class="d-block">Left Part</strong>
        </div>
        <div class="table-responsive my-5">
            <table class="table table-striped table-hover">
                <thead>
                    <tr class="text-center">
                        <th>Step</th>
                        <th>Title</th>
                        <th>Details</th>
                        <th>Edit</th>
                    </tr>
                </thead>
                <tbody class="text-center">
                    @foreach (var item in Model.WorkingProcessItemLeft)
                    {
                        <tr>
                            <td>@item.Step</td>
                            <td>@item.Title</td>
                            <td><a asp-area="Admin" asp-controller="WorkingProcess" asp-action="LDetails" asp-route-id="@item.Id" class="btn btn-primary btn-block text-white btn-sm"><i class="fas fa-info-circle"></i> </a></td>
                            <td><a asp-area="Admin" asp-controller="WorkingProcess" asp-action="LUpdate" asp-route-id="@item.Id" class="btn btn-primary btn-block text-white btn-sm"><i class="fas fa-pencil-alt"></i> </a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <hr />

        <div class="title text-center">
            <strong class="d-block">Right Part</strong>
        </div>
        <div class="table-responsive my-5">
            <table class="table table-striped table-hover">
                <thead>
                    <tr class="text-center">
                        <th>Step</th>
                        <th>Title</th>
                        <th>Details</th>
                        <th>Edit</th>
                    </tr>
                </thead>
                <tbody class="text-center">
                    @foreach (var item in Model.WorkingProcessItemRight)
                    {
                        <tr>
                            <td>@item.Step</td>
                            <td>@item.Title</td>
                            <td><a asp-area="Admin" asp-controller="WorkingProcess" asp-action="RDetails" asp-route-id="@item.Id" class="btn btn-primary btn-block text-white btn-sm"><i class="fas fa-info-circle"></i> </a></td>
                            <td><a asp-area="Admin" asp-controller="WorkingProcess" asp-action="RUpdate" asp-route-id="@item.Id" class="btn btn-primary btn-block text-white btn-sm"><i class="fas fa-pencil-alt"></i> </a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <hr />
    </div>
</div>

