@model IEnumerable<IconInfoAboutMe>
@{
    ViewData["Title"] = "Index";
}

<div class="col-lg-10 offset-1">
    <div class="block">
        <div class="table-responsive my-5">
            <table class="table table-striped table-hover">
                <thead>
                    <tr class="text-center">
                        <th>Icon</th>
                        <th>Title</th>
                        <th>Sub Title</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody class="text-center">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><i class="@item.IconInfo"></i></td>
                            <td>@item.TitInfo</td>
                            <td>@item.SubTitInfo</td>
                            <td><a asp-area="Admin" asp-controller="IconInfo" asp-action="Update" asp-route-id="@item.Id" class="btn btn-primary btn-block text-white btn-sm"><i class="fas fa-pencil-alt"></i> </a></td>
                            <td><a asp-area="Admin" asp-controller="IconInfo" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-block text-white btn-sm"><i class="fas fa-trash-alt"></i> </a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <hr />
        <a asp-area="Admin" asp-controller="IconInfo" asp-action="Create" class="btn btn-success btn-block text-white">Create</a>
    </div>
</div>