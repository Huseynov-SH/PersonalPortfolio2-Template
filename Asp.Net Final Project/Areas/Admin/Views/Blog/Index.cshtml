@model MainPageVM
@{
    ViewData["Title"] = "Index";
}

<div class="col-lg-10 offset-1">
    <div class="block">
        <div class="title text-center">
            <strong class="d-block">Blog</strong>
        </div>
        <div class="table-responsive my-5">
            <table class="table table-striped table-hover">
                <thead>
                    <tr class="text-center">
                        <th>Blog Image</th>
                        <th>Title</th>
                        <th>Details</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody class="text-center">
                    @foreach (var item in Model.BlogItem)
                    {
                        <tr>
                            <td><img src="~/img/blog/@item.Image" alt="Alternate Text" width="70" height="50" /></td>
                            <td>@item.Title</td>
                            <td><a asp-area="Admin" asp-controller="Blog" asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-block text-white btn-sm"><i class="fas fa-info-circle"></i> </a></td>
                            <td><a asp-area="Admin" asp-controller="Blog" asp-action="Update" asp-route-id="@item.Id" class="btn btn-primary btn-block text-white btn-sm"><i class="fas fa-pencil-alt"></i> </a></td>
                            <td><a asp-area="Admin" asp-controller="Blog" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-block text-white btn-sm"><i class="fas fa-trash-alt"></i> </a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <hr />
        <a asp-area="Admin" asp-controller="Blog" asp-action="Create" class="btn btn-success btn-block text-white">Create</a>
    </div>
</div>

