@model Asp.Net_Final_Project.Models.BlogItem
@{
    ViewData["Title"] = "Details";
}

<div class="col-lg-12">
    <div class="block text-center">
        <table class="table table-striped table-hover">
            <thead>
                <tr class="text-center">
                    <th>Blog Image</th>
                    <th>Title</th>
                    <th>SubTitle</th>
                    <th>Share Date</th>
                    <th>Tag</th>
                </tr>
            </thead>
            <tbody class="text-center">
                <tr>
                    <td><img src="~/img/blog/@Model.Image" alt="Alternate Text" width="70" height="50" /></td>
                    <td>@Model.Title</td>
                    <td>@Model.SubTitle</td>
                    <td>@Model.ShareDate</td>
                    <td>@Model.Tag</td>
                </tr>
            </tbody>
        </table>
        <h4 class="mt-5">Context</h4>
        <hr />
        <div class="col-8 offset-2"><h5>@Model.Context</h5></div>
        <hr />
        <div class="row">
            <div class="col-4 offset-1"><a asp-area="Admin" asp-controller="Blog" asp-action="Update" asp-route-id="@Model.Id" class="btn btn-primary btn-block text-white btn-sm"><i class="fas fa-pencil-alt"></i> </a></div>
            <div class="col-4 offset-1"><a asp-area="Admin" asp-controller="Blog" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger btn-block text-white btn-sm"><i class="fas fa-trash-alt"></i> </a></div>
            <div class="mt-5 col-12"> <a asp-area="Admin" asp-controller="Blog" asp-action="Index" class="text-white btn btn-success btn-block">Back</a></div>
        </div>
    </div>
</div>

