@model Asp.Net_Final_Project.Models.BlogItem
@{
    ViewData["Title"] = "Update";
}

<div class="col-lg-10 offset-1">
    <div class="block">
        <div class="block-body">
            <form method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <hr />
                    <label class="d-block form-control-label">Currently active image</label>
                    <img src="~/img/blog/@Model.Image" width="120" height="120" />
                </div>
                <div class="form-group">
                    <label asp-for="Photo" class="form-control-label"></label>
                    <input asp-for="Photo" accept="image/*" class="form-control">
                    <span asp-validation-for="Photo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Title" class="form-control-label"></label>
                    <input asp-for="Title" class="form-control">
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SubTitle" class="form-control-label"></label>
                    <input asp-for="SubTitle" class="form-control">
                    <span asp-validation-for="SubTitle" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ShareDate" class="form-control-label"></label>
                    <input asp-for="ShareDate" class="form-control">
                    <span asp-validation-for="ShareDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Tag" class="form-control-label"></label>
                    <input asp-for="Tag" class="form-control">
                    <span asp-validation-for="Tag" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Context" class="form-control-label"></label>
                    <textarea asp-for="Context" class="form-control"></textarea>
                    <span asp-validation-for="Context" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <hr />
                    <input type="submit" value="Save Changes" class="btn btn-info btn-block">
                    <a asp-area="Admin" asp-controller="Blog" asp-action="Index" class="text-white btn btn-success btn-block">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
}

