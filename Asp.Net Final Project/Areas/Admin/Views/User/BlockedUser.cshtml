@using Asp.Net_Final_Project.Models
@model IList<AppUser>
@{
    ViewData["Title"] = "BlockedUser";
}

    <div class="col-lg-12">
        @if (Model.Count == 0)
        {
            <div class="alert alert-primary" role="alert"> This is a primary alert—check it out! </div> 
        }
        else
        {
            <div class="block">
                <div class="title"><strong>Blocked Manager</strong></div>
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Surname</th>
                                <th>Username</th>
                                <th>Email</th>
                                <th></th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (AppUser user in Model)
                            {
                                if (user.Blocked == true)
                                {
                                    <tr>
                                        <td>@user.Name</td>
                                        <td>@user.Surname</td>
                                        <td>@user.UserName</td>
                                        <td>@user.Email</td>
                                        <td>
                                            <a asp-controller="User" asp-action="UnblockManager" asp-route-id="@user.Id" class="btn btn-primary">Unblock Manager</a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
    </div>
