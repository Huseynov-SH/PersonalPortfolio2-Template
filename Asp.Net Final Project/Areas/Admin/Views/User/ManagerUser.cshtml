@using Asp.Net_Final_Project.Models
@model IList<AppUser>
@{
    ViewData["Title"] = "ManagerUser";
}

<div class="col-lg-12">
    <div class="block">
        <div class="title"><strong>Manager Settings</strong></div>
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Surname</th>
                        <th>Email</th>
                        <th></th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (AppUser user in Model)
                    {
                        if (user.Blocked == false)
                        {
                            <tr>
                                <td>@user.Name</td>
                                <td>@user.Surname</td>
                                <td>@user.Email</td>
                                <td>
                                    <a asp-controller="User" asp-action="MakeAdmin" asp-route-id="@user.Id" class="btn btn-dark btn-sm">Make Admin</a>
                                </td>
                                <td>
                                    <a asp-controller="User" asp-action="BlockUser" asp-route-id="@user.Id" class="btn btn-primary btn-sm">Block Manager</a>
                                </td>
                                <td>
                                    <a asp-controller="User" asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-danger btn-sm">Delete Manager</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
