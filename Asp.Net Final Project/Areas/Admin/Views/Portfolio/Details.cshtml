@model Asp.Net_Final_Project.Models.PortfolioItem
@{
    ViewData["Title"] = "Details";
}

<div class="col-lg-8 offset-2">
    <div class="block">
        <div class="row text-center">
            <div class="col-5">
                <img src="~/img/portfolio/@Model.Image" width="100" height="100" />
            </div>
            <div class="col-7 text-left">
                <h4>Project Name: @Model.ProjectName</h4>
                <hr />
                <h4>Tag: @Model.Tag</h4>
                <hr />
            </div>
            <div class="col-12">
                <h4 class="mt-5 text-center">Video Link</h4>
                <hr />
                <h4>@Model.ProjectVideoLink</h4>
                <hr />
            </div>
        </div>
        <div class="row">
            <div class="col-4 offset-1"><a asp-area="Admin" asp-controller="Portfolio" asp-action="Update" asp-route-id="@Model.Id" class="btn btn-primary btn-block text-white btn-sm"><i class="fas fa-pencil-alt"></i> </a></div>
            <div class="col-4 offset-1"><a asp-area="Admin" asp-controller="Portfolio" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger btn-block text-white btn-sm"><i class="fas fa-trash-alt"></i> </a></div>
            <div class="mt-5 col-12"> <a asp-area="Admin" asp-controller="Portfolio" asp-action="Index" class="text-white btn btn-success btn-block">Back</a></div>
        </div>
    </div>
</div>


