@model Asp.Net_Final_Project.Models.TestimonailItem
@{
    ViewData["Title"] = "Details";
}

<div class="col-lg-8 offset-2">
    <div class="block">
        <div class="row text-center">
            <div class="col-5">
                <img src="~/img/testimonials/@Model.Image" width="90" height="90" />
            </div>
            <div class="col-7 text-left">
                <h4>FullName: @Model.FullName</h4>
                <hr />
                <h4>Job: @Model.Job</h4>
                <hr />
                <div class="">
                    <h4 style="display:inline-block">Rating: </h4>
                    @for (int i = 0; i < @Model.Rating; i++)
                    {
                        <i class="far fa-star"></i>
                    }
                </div>
                <hr />
            </div>
            <div class="col-12">
                <h4 class="mt-5 text-center">Description</h4>
                <hr />
                <h4>@Model.Comment</h4>
                <hr />
            </div>
        </div>
        <div class="row">
            <div class="col-4 offset-1"><a asp-area="Admin" asp-controller="Testimonials" asp-action="Update" asp-route-id="@Model.Id" class="btn btn-primary btn-block text-white btn-sm"><i class="fas fa-pencil-alt"></i> </a></div>
            <div class="col-4 offset-1"><a asp-area="Admin" asp-controller="Testimonials" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger btn-block text-white btn-sm"><i class="fas fa-trash-alt"></i> </a></div>
            <div class="mt-5 col-12"> <a asp-area="Admin" asp-controller="Testimonials" asp-action="Index" class="text-white btn btn-success btn-block">Back</a></div>
        </div>
    </div>
</div>


