@model Asp.Net_Final_Project.Models.TestimonailItem
@{
    ViewData["Title"] = "Create";
}

<div class="col-lg-10 offset-1">
    <div class="block">
        <div class="block-body">
            <form method="post" enctype="multipart/form-data">
                <div class="form-group d-none">
                    <label asp-for="SectionTestimonialId" class="form-control-label"></label>
                    <select asp-for="SectionTestimonialId">
                        <option value="1">1</option>
                    </select>
                    <span asp-validation-for="SectionTestimonialId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Photo" class="form-control-label"></label>
                    <input asp-for="Photo" accept="image/*" class="form-control">
                    <span asp-validation-for="Photo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FullName" class="form-control-label"></label>
                    <input asp-for="FullName" class="form-control">
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Job" class="form-control-label"></label>
                    <input asp-for="Job" class="form-control">
                    <span asp-validation-for="Job" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Rating" class="form-control-label"></label>
                    <input max="5" asp-for="Rating" class="form-control">
                    <span asp-validation-for="Rating" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Comment" class="form-control-label"></label>
                    <textarea asp-for="Comment" class="form-control"></textarea>
                    <span asp-validation-for="Comment" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <hr />
                    <input type="submit" value="Submit" class="btn btn-info btn-block">
                    <a asp-area="Admin" asp-controller="ServiceItem" asp-action="Index" class="text-white btn btn-success btn-block">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
}