@model Asp.Net_Final_Project.Models.SkillsProgressBar
@{
    ViewData["Title"] = "PUpdate";
}

<div class="col-lg-10 offset-1">
    <div class="block">
        <div class="block-body">
            <form method="post" enctype="multipart/form-data">
                <div class="form-group d-none">
                    <label asp-for="SectionSkillsId" class="form-control-label"></label>
                    <select asp-for="SectionSkillsId">
                        <option value="1">1</option>
                    </select>
                    <span asp-validation-for="SectionSkillsId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProgressTitle" class="form-control-label"></label>
                    <input asp-for="ProgressTitle" class="form-control">
                    <span asp-validation-for="ProgressTitle" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProgressValue" class="form-control-label"></label>
                    <input asp-for="ProgressValue" max="100" class="form-control">
                    <span asp-validation-for="ProgressValue" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <hr />
                    <input type="submit" value="Submit" class="btn btn-info btn-block">
                    <a asp-area="Admin" asp-controller="Skills" asp-action="Index" class="text-white btn btn-success btn-block">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
}